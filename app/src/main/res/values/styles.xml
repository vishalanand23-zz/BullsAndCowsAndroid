<?xml version="1.0" encoding="utf-8" ?>
<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light">
        <item name="android:actionBarStyle">@style/action_bar</item>
        <item name="android:scaleType">centerCrop</item>
    </style>

    <style name="action_bar" parent="Theme.AppCompat.Light">
        <!--<item name="android:background">@color/green</item>-->
    </style>

    <style name="submit_button">
        <item name="android:textColor">@color/black</item>
        <item name="android:background">@color/green</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_margin">3dp</item>
        <item name="android:textSize">30sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:shadowColor">@color/black</item>
        <item name="android:shadowDx">1</item>
        <item name="android:shadowDy">1</item>
        <item name="android:shadowRadius">2</item>
    </style>

    <style name="new_game_text">
        <item name="android:textSize">15sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:background">@color/green</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="new_game_button_layout">
        <item name="android:background">@color/green</item>
    </style>

    <style name="round_result_layout">
        <item name="android:background">@drawable/customborder</item>
    </style>

    <style name="round_result_header"></style>

    <style name="game_result_layout">
        <item name="android:background">@drawable/customborder</item>
    </style>

    <style name="number_picker_layout">
        <item name="android:background">@drawable/customborder</item>
    </style>

    <style name="number_picker"></style>


</resources>
