<?xml version="1.0" encoding="utf-8" ?>
<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light">
        <item name="android:actionBarStyle">@style/action_bar</item>
        <!--<item name="android:background">@color/grey</item>-->
    </style>

    <style name="action_bar" parent="Theme.AppCompat.Light">
        <!--<item name="android:background">@color/green</item>-->
    </style>

    <!-- Play Activity -->

    <style name="submit_button_layout">
    </style>

    <style name="new_game_text">
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">15sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="pause_game_text">
        <item name="android:textColor">@color/blue</item>
        <item name="android:textSize">25sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_marginTop">100dp</item>
    </style>

    <style name="new_game_button_layout">
        <!--<item name="android:background">@color/blue</item>-->
    </style>

    <style name="round_result_layout">
        <item name="android:background">@drawable/customborder</item>
    </style>

    <style name="round_result_header"></style>

    <style name="game_result_layout">
        <item name="android:background">@drawable/customborder</item>
    </style>

    <style name="number_picker_layout">
        <item name="android:background">@drawable/customborder</item>
    </style>

    <style name="number_picker"></style>

    <style name="new_game_button">
        <item name="android:textColor">@color/white</item>
        <item name="android:layout_marginLeft">5dp</item>
        <item name="android:layout_marginTop">5dp</item>
        <item name="android:layout_marginBottom">5dp</item>
        <item name="android:layout_marginRight">5dp</item>
    </style>

    <style name="submit_button">
        <item name="android:textColor">@color/white</item>
        <item name="android:layout_marginLeft">5dp</item>
        <item name="android:layout_marginRight">5dp</item>
    </style>

    <style name="pause_button">
        <item name="android:textColor">@color/white</item>
        <item name="android:layout_marginLeft">5dp</item>
        <item name="android:layout_marginRight">5dp</item>
    </style>

    <!--Scores Activity-->
    <style name="scores_text">
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">25sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:layout_marginTop">10dp</item>
        <item name="android:layout_marginBottom">10dp</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="scores_table">
        <item name="android:background">@drawable/customborder</item>
    </style>

    <style name="scores_row">
        <item name="android:background">@color/medium_blue</item>
    </style>

    <style name="scores_result_text_in_scores">
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textStyle">bold</item>
        <item name="android:gravity">center</item>
        <item name="android:background">@color/medium_blue</item>
    </style>

    <style name="scores_explanation_text_view">
        <item name="android:textSize">15sp</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="scores_result_text_in_play">
        <item name="android:textSize">15sp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:gravity">center</item>
        <item name="android:background">@color/medium_blue</item>
    </style>

    <style name="you_win_text_in_play">
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textStyle">bold</item>
        <item name="android:gravity">center</item>
        <item name="android:background">@color/medium_blue</item>
    </style>

</resources>
